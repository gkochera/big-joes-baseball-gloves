<div class="container">
    <h3 class="deep-gray-text center">In The Store</h3>
    <p class="deep-gray-text darken-1 center-align flow-text">Here are some of the items for sale right now, in our eBay store.</p>
    <div class="row center">
        <a class="grey lighten-5 btn-large black-text" href="https://www.ebay.com/str/bigjoesteck" id="ebay_store_link">
            Visit Our <span><img src="./img/ebay.svg"></span> Store
        </a>
    </div>
    <div class="row">
        {{#each inventory}}
        <div class="col s12 m6 l4">
            <div class="card large">
                <div class="card-image">
                    <img src="{{this.PictureURL}}">
                    <span class="card-title">{{this.Price}}</span>
                </div>
                <div class="card-content">
                    <span class="card-title truncate">{{this.Title}}</span>
                    <p>{{this.ShortDescription}}</p>
                </div>
                <div class="card-action">
                <a class="brown-text darken-2" href="{{this.ItemURL}}">See in store</a>
                </div>
            </div>
        </div>
    {{/each}}
    </div>
</div>